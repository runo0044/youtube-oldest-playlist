{
  "manifest_version": 3,
  "name": "YouTube Oldest-First Playlis",
  "version": "0.1",
  "description": "YouTubeチャンネルの全動画を「古い順」で新しいプレイリストに自動追加するChrome拡張",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "identity",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}